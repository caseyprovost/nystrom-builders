<%= simple_form_for user, url: user.id? ? admin_user_path(user) : admin_users_path do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :username %>
  <%= f.input :email %>

  <%= f.button :submit, user.id? ? 'Update User' : 'Add User', class: 'btn btn-success', data: { action: 'update-user' } %>
<% end %>
