<div class="container">
  <div class="row" style="margin-bottom: 20px;">
    <div class="span8">
      <h1>Projects</h1>
    </div>
    <div class="span4" style="padding-top: 10px;">
      <%= link_to 'Add New Project', new_admin_project_path, class: 'btn btn-primary pull-right' %>
    </div>
  </div>

  <div class="row" style="margin-bottom: 20px;">
    <p class="span12">
      This is where you will manage all the projects on Nystrom Builders.
    </p>
    <div class="span12">
      <p>
        Some helpful tidbits:
      </p>
      <ul>
        <li>
          "Display On Projects Page" indicates if the project will show up on nystrombuilders-gr.com/projects
        </li>
        <li>
          Clicking on the project's name will allow you to edit that project.
        </li>
      </ul>
    </div>
  </div>

  <table role="table" class="table table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Display On Projects Page
        </th>
        <th>
          Photos
        </th>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>
            <%= link_to project.name, edit_admin_project_path(project) %>
          </td>
          <td>
            <%= project.display_on_projects_page ? 'Yes' : 'No' %>
          </td>
          <td>
            <%= project.photos.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
